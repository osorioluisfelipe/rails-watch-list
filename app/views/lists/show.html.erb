<div class="container">
  <h1><%= @list.name %></h1>
  <div class="row row-cols-3 row-cols-md-3">
  <% @list.bookmarks.each do |bookmark|%>
    <div class="col mb-4">
      <div class="card">
        <img src="https://image.tmdb.org/t/p/w300<%= bookmark.movie.poster_url %>" class="card-img-top" alt="movie-poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> ‚≠ê <%= bookmark.movie.rating %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-footer">
          <h5 class="card-text"><i class="fas fa-quote-left"></i> <%= bookmark.comment %></h5>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <p><%= link_to 'Back to lists', lists_path, class: "btn btn-primary" %></p>
  <br>
  <p><%= link_to 'Add Movie', new_list_bookmark_path(params[:id]), class: "btn btn-primary" %></p>
</div>
